<article>
  <h2><%= name %></h2>
  <p><%= description %></p>
  <p id="<%= name %>">
    <img src="<%= images.first %>">
  </p>
  <div class="row">
    <% images.each do |image| %>
      <div class="large-4 columns">
        <p>
          <a href="#<%= name %>" class="<%= 'selected' if image == images.first %>">
            <img src="<%= image %>">
          </a>
        </p>
      </div>
    <% end %>
  </div>
</article>
